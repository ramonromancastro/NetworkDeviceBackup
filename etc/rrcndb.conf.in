##
## CUSTOM CONFIGURATION
##

# Installation path
# rrcndbBaseDir=/usr/local/rrcndb/
rrcndbBaseDir=@DESTDIR@

# Backup path
# rrcndbBackupDir=/usr/local/rrcndb/var/dump
rrcndbBackupDir=@DESTDIR@/var/dump

# Display log messages on stdout
# rrcndbVerboseEnable="yes|no"
rrcndbVerboseEnable="yes"

# Save log message on {rrcndbLogFile} file
# rrcndbLogEnable="yes|no"
rrcndbLogEnable="yes"

# Enable mail result
# rrcndbMailEnable="yes|no"
rrcndbMailEnable="yes"
rrcndbMailFrom="rrcndb@example.com"
rrcndbMailTo="alertas@example.com"
rrcndbMailSubject="rrcndb [$(date +"%Y-%m-%d")]"

# SNMP parameters
rrcndbSNMPVersion=2c
rrcndbSNMPCommunity=public

# Delete old backups
# rrcndbDeleteOldEnabled="yes|no"
rrcndbDeleteOldEnabled="yes"
rrcndbDeleteOldDays=45

##
## DO NOT MODIFY THIS!
##

rrcndbCfgDir=@DESTDIR@/etc
rrcndbLibDir=@DESTDIR@/lib
rrcndbTmpDir=@DESTDIR@/tmp
rrcndbRouterFile=@DESTDIR@/etc/router.db
rrcndbLibFilterLinesFile=@DESTDIR@/lib/filter_lines.pl
rrcndbLastLogFile=@DESTDIR@/logs/rrcndb.last.log
rrcndbStatusFile=@DESTDIR@/logs/rrcndb.status
rrcndbPIDFile=@DESTDIR@/logs/rrcndb.pid

rrcndbLogFile=/var/log/rrcndb.log

rrcndbRawExt=raw.conf
rrcndbConfExt=conf
